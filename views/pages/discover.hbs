{{> head}}

<body class="h-100 d-flex flex-column">
  {{> nav}}

  <main class="container py-4">
    <h1>Discover Events</h1>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      {{#each events}}
        <div class="col">
          <div class="card">
            <img src="{{#if image}}{{image}}{{else}}https://via.placeholder.com/150{{/if}}" class="card-img-top" alt="Event Image">
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <p class="card-text">{{date}} | {{time}}</p>
              <a href="{{bookingUrl}}" class="btn btn-primary">Book Now</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </main>

  {{> footer}}
</body>
